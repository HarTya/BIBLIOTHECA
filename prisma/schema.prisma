datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String      @default(cuid()) @id
  image        String
  name         String      @unique
  price        Int
  category     Category    @relation(fields: [categoryId], references: [id])
  categoryId   String      
}

model Category {
  id           String      @default(cuid()) @id
  image        String
  name         String      @unique
  menu         Int
  products     Product[]
}